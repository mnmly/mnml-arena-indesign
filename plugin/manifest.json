{
  "id": "mnml-arena-indesign",
  "name": "Are.na for InDesign",
  "version": "1.0.0",
  "main": "index.html",
  "host": [
    {
      "app": "ID",
      "minVersion": "19"
    }
  ],
  "requiredPermissions": {
    "localFileSystem": "fullAccess",
    "network": {
      "domains": [
          "https://momentjs.com",
          "https://*.are.na",
          "https://*.cloudfront.net"
        ]
    },
  
    "launchProcess": {
      "schemes": ["https", "http"]
    },
    "webview": {
      "allow": "yes",
      "domains": "all",
      "enableMessageBridge": "localAndRemote"
    }
	},
  "featureFlags": {
     "enableAlerts": true
 },
  "manifestVersion": 5,
  "entrypoints": [
    {
      "type": "panel",
      "id": "mainPanel",
      "minimumSize": {
        "width": 230,
        "height": 200
      },
      "maximumSize": {
        "width": 2000,
        "height": 2000
      },
      "preferredDockedSize": {
        "width": 300,
        "height": 300
      },
      "preferredFloatingSize": {
        "width": 300,
        "height": 300
      },
      "label": {
        "default": "Are.na"
      },
      "icons": [
        {
          "width": 23,
          "height": 23,
          "path": "icons/dark.png",
          "scale": [
            1,
            2
          ],
          "theme": [
            "darkest",
            "dark",
            "medium"
          ]
        },
        {
          "width": 23,
          "height": 23,
          "path": "icons/light.png",
          "scale": [
            1,
            2
          ],
          "theme": [
            "lightest",
            "light"
          ]
        }
      ]
    },
    {
      "type": "command",
      "id": "openBlockInArena",
      "label": {
          "default": "Open selected block"
      }
    }
  ],
  "icons": [
    {
      "width": 48,
      "height": 48,
      "path": "icons/plugin.png",
      "scale": [
        1,
        2
      ],
      "theme": [
        "darkest",
        "dark",
        "medium",
        "lightest",
        "light",
        "all"
      ],
      "species": [
        "pluginList"
      ]
    }
  ]
}